{
  "manifest_version": 3,
  "name": "unTrump",
  "version": "1.0",
  "description": "Are you burned out with all of the news about Donald Trump? Let the unTrump extension help out.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
